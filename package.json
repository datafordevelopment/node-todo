{
  "dependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-require": "^2.1.0",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "compression-webpack-plugin": "^0.3.1",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^3.0.0",
    "koa-compose": "^3.1.0",
    "koa-route": "^3.1.0",
    "koa-static": "^3.0.0",
    "mongoose": "^4.4.14",
    "raven": "^0.10.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "source-map-support": "^0.4.0",
    "webpack": "^1.13.0"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0",
    "eslint": "^2.2.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-react": "^4.1.0",
    "nodemon": "^1.9.0"
  },
  "engines": {
    "node": "6.x.x",
    "npm": "3.x.x"
  },
  "private": true,
  "scripts": {
    "build": "rm -rf build && npm run build-client && npm run build-server && npm run build-static",
    "build-client": "babel-node node_modules/webpack/bin/webpack --config webpack.production.js --bail",
    "build-server": "babel -d ./build ./server --source-maps",
    "build-static": "cp ./client/index.html ./build",
    "debug": "nodemon --exec babel-node ./server --source-maps",
    "heroku-postbuild": "npm run build",
    "lint": "eslint .",
    "start": "node ./build"
  }
}
